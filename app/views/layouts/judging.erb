<!DOCTYPE html>
<html>
<head>
  <title><%= "#{yield(:title)} &middot; ".html_safe if !yield(:title).empty? %>Atlanta Photojournalism Seminar Contest</title>
  <%= favicon_link_tag       'favicon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="judging">

<%= render partial: 'shared/judging/navigation' %>

<div id="sidebar-entries">
  <h4><%= @current_category %> Entries</h4>
  
  <ul>
  <% @entries.each do |entry| %>
    
    <% if entry.category_type.has_url %>
      <li class="sidebar-entry">
        <a href="/judging/entry/<%= entry.unique_hash %>" class="sidebar-entry-hash" data-entry-hash="<%= entry.unique_hash %>">Entry #<%= entry.id %></a>
      </li>
    
    <% elsif entry.images.size > 0 %>
      <li class="sidebar-entry">
        <a href="/judging/entry/<%= entry.unique_hash %>" class="sidebar-entry-hash" data-entry-hash="<%= entry.unique_hash %>">Entry #<%= entry.id %></a>
      </li>
    <% end %>

  <% end %>
  </ul>
  <p>Press ALT+C to toggle captions.</p>
</div>

<%= yield %>

</body>
</html>
