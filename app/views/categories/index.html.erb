<h1 class="heading">Administration</h1>
<div class="row">
  <div class="col-md-2">
    <%= render partial: 'shared/admin_navigation' %>
  </div>
  <div class="col-md-10">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.description %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table> 
  </div>
</div>