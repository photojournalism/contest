<div class="col-md-8 col-md-offset-2">
<h2>Register</h2>

<%= render partial: 'shared/messages' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-md-6">
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control', required: 'required' %>
        </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control', required: 'required' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :street %>
    <%= f.text_field :street, class: 'form-control', required: 'required' %>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control', required: 'required' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :state_id %>
        <select class="form-control" id="user_state_id" name="user[state_id]">
          <% @states.each do |state| %>
            <option value="<%= state.id %>"><%= state.name %></option>
          <% end %>
        </select>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :zip %>
        <%= f.text_field :zip, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :country_id %>
    <select class="form-control" id="user_country_id">
      <% @countries.each do |country| %>
        <option value="<%= country.id %>"<% if @us && country.id == @us.id %> selected<% end %>><%= country.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <%= f.label :day_phone %>
    <%= f.text_field :day_phone, class: 'form-control', required: 'required' %>
  </div>

  <div class="form-group">
    <%= f.label :evening_phone %>
    <%= f.text_field :evening_phone, class: 'form-control', required: 'required' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', required: 'required' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: 'required' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: 'required' %>
  </div>

  <div class="form-group">
    <%= f.submit "Register", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>